<?xml version="1.0"?>

<sdf version="1.4">
    <model name="chassis">
        <static>false</static>
        <pose>0 0 0 0 0 0</pose><!-- global pose -->

        <link name="platform">
            <pose>0 0 0.25 0 0 0</pose>
            <inertial>
                <pose>0 0 0 0 0 0</pose>
                <inertia>
                    <!-- http://en.wikipedia.org/wiki/List_of_moment_of_inertia_tensors -->
                    <ixx>0.5</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>1</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.1</izz>
                </inertia>
                <mass>20</mass>
            </inertial>
            <collision name="platform_collision">
                <geometry>
                    <box>
                        <size>2 1 0.25</size>
                    </box>
                </geometry>
            </collision>
            <visual name="platform_visual">
                <geometry>
                    <box>
                        <size>2 1 0.25</size>
                    </box>
                </geometry>
                <material>
                    <script>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                        <name>Gazebo/Wood</name>
                    </script>
                </material>
            </visual>
<!--        </link>
        <link name="caster">
            <inertial>
                <pose 0 0 0 0 0 0</pose>
                <mass>1</mass>
-->
            <collision name='caster_collision'>
                <pose>-0.8 0 -0.125 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius>.125</radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0</mu>
                            <mu2>0</mu2>
                            <slip1>1.0</slip1>
                            <slip2>1.0</slip2>
                        </ode>
                    </friction>
                </surface>
            </collision>
            <visual name='caster_visual'>
                <pose>-0.8 0 -0.125 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius>.125</radius>
                    </sphere>
                </geometry>
            </visual>
        </link>
        <link name="left_wheel">
            <pose>0.8 0.6 0.125 0 1.5707 1.5707</pose>
            <collision name="wheel_collision">
                <geometry>
                    <cylinder>
                        <radius>.125</radius>
                        <length>.05</length>
                    </cylinder>
                </geometry>
            </collision>
            <visual name="wheel_visual">
                <geometry>
                    <cylinder>
                        <radius>.125</radius>
                        <length>.05</length>
                    </cylinder>
                </geometry>
            </visual>
        </link>
        <link name="right_wheel">
            <pose>0.8 -0.6 0.125 0 1.5707 1.5707</pose>
            <collision name="wheel_collision">
                <geometry>
                    <cylinder>
                        <radius>.125</radius>
                        <length>.05</length>
                    </cylinder>
                </geometry>
            </collision>
            <visual name="wheel_visual">
                <geometry>
                    <cylinder>
                        <radius>.125</radius>
                        <length>.05</length>
                    </cylinder>
                </geometry>
            </visual>
        </link>

        <joint type="revolute" name="left_wheel_hinge">
            <pose>0 0 -0.03 0 0 0</pose>
            <child>left_wheel</child>
            <parent>platform</parent>
            <axis>
                <xyz>0 1 0</xyz>
            </axis>
        </joint>
        <joint type="revolute" name="right_wheel_hinge">
            <pose>0 0 0.03 0 0 0</pose>
            <child>right_wheel</child>
            <parent>platform</parent>
            <axis>
                <xyz>0 1 0</xyz>
            </axis>
        </joint>

    </model>
</sdf>
